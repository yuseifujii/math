rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 記事コレクション（全記事を読み取り可能）
    match /articles/{document} {
      allow read: if true;
      allow write: if false; // 書き込みは無効化（セキュリティ）
    }
    
    // 数学トピックコレクション（全トピックを読み取り可能）
    match /math_topics/{document} {
      allow read: if true;
      allow write: if false; // 書き込みは無効化（セキュリティ）
    }
  }
}